{
  "name": "@dysporium-sdk/core",
  "version": "3.0.0",
  "description": "Core functionality for Dysporium SDK - AI/LLM integration library",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ai",
    "sdk",
    "llm",
    "language-model",
    "openai",
    "gpt"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dysporium/dysporium-ai-sdk.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@dysporium-sdk/provider": "workspace:*",
    "@dysporium-sdk/utils": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
