{
  "name": "dysporium-sdk",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=@dysporium-sdk/*",
    "dev": "turbo run dev",
    "clean": "turbo run clean",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "resolve-deps": "node scripts/resolve-workspace-deps-for-publish.js",
    "restore-deps": "node scripts/restore-workspace-deps.js",
    "release": "pnpm build:packages && pnpm changeset:version && pnpm resolve-deps && changeset publish && pnpm restore-deps"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": "20.x"
  },
  "packageManager": "pnpm@9.15.0"
}